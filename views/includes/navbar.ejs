  /* // */
  
.search-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
    margin: 0 10rem;
}

.search-options {
    display: flex;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 50px;
    overflow: hidden;
    align-items: center;
} 

.logo {
    width: 120px;
    height: auto;
}

.search-option {
    padding: 10px 20px;
    border-right: 1px solid #ddd;
    text-align: center;
}

.search-option:last-child {
    border-right: none;
}

.search-option label {
    display: block;
    font-size: 12px;
    color: #0c0c0c;
    margin-bottom: 5px;
}

.search-option input {
    border: none;
    outline: none;
    font-size: 14px;
    color: #333;
    background-color: transparent;
}

.search-btn {
    background-color: #ff385c;
    border: none;
    padding: 12px 15px;
    border-radius: 80%;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #f3f3f3;
    font-size: 18px;
}

  /* Profile dropdown button */
.profile-button {
  border: 1px solid #ddd;
  padding: 0.5rem 1rem;
  cursor: pointer;
  border-radius: 40px;
  background-color: white;
}

/* Dropdown menu styling */
.dropdown-menu {
  min-width: 150px;
  border: 1px solid #e3e0e0;
}

/* Align icons in the button */
.profile-button i {
  font-size: 1.2rem;
}

/* Navbar padding and design */
.navbar {
  padding: 1rem;
  background-color: white;
  border-bottom: 1px solid #ddd;
}

/* Profile icon and button hover effects */
.profile-button:hover {
  background-color: #f3f3f3;
}

/* Dropdown items styling */
.dropdown-item {
  font-size: 16px;
  padding: 0.5rem 1rem;
}

.dropdown-item:hover {
  background-color: #f3f3f3;
}


</style>
